<div class="display-4">Create a project</div>
<hr />
<form class="container" method="POST" action="/create-project">
  <div class="row">
  <div class="form-group col">
    <label for="project-title">Title</label>
    <input
      type="text"
      class="form-control"
      id="project-title"
    />
    <label for="project-type">Type</label>
    <select class="form-control" id="project-type">
      {{#each project.type}}
      <option>{{this}}</option>
      {{/each}}
    </select>
    </div>
    <div class="form-group col">
    <label for="project-techno">Technologies</label>
    <input  class="form-control" id="project-techno">
    </input>

    <label for="project-description">Description</label>
    <textarea
      class="form-control"
      id="project-description"
      rows="3"
    ></textarea>
    <label for="avatar">Image of the project</label>
    <input class="form-control" type="file"
       id="avatar" name="avatar"
       accept="image/png, image/jpeg"/></div>
  </div>
</form>